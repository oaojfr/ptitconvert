{
  "name": "ptitconvert-electron",
  "version": "1.0.0",
  "private": true,
  "description": "Desktop UI for PtitConvert (Electron front-end)",
  "main": "main.js",
  "scripts": {
  "start": "electron .",
  "build:backend": "cd .. && .venv/bin/python scripts/build_backend.py",
  "build": "npm run build:backend && electron-builder -mwl",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.ptitconvert.app",
    "productName": "PtitConvert",
  "publish": "never",
    "asar": true,
    "compression": "maximum",
    "npmRebuild": false,
    "electronLanguages": ["en-US", "fr"],
    "files": [
      "**/*",
      "!**/*.map",
      "!**/*.ts",
      "!**/*.spec.*",
      "!**/__tests__/**",
      "!**/test{,s}/**",
      "!**/screenshots/**",
      "!**/*.md",
      "!**/docs/**"
    ],
    "extraResources": [
      {
        "from": "../bin",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
  "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64"]
        }
      ],
      "artifactName": "PtitConvert-${version}-mac.dmg",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
  "artifactName": "PtitConvert-${version}-win.exe"
      
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "artifactName": "PtitConvert-${version}-linux.AppImage",
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  }
}
