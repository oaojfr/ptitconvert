{
  "name": "ptitconvert-electron",
  "version": "1.0.0",
  "private": true,
  "description": "Desktop UI for PtitConvert (Electron front-end)",
  "main": "main.js",
  "scripts": {
  "start": "electron .",
  "build:backend": "cd .. && .venv/bin/python scripts/build_backend.py",
  "icons": "node scripts/generate-icons.js",
  "build": "npm run build:backend && npm run icons && electron-builder -mwl --publish=never",
  "build:mac": "npm run icons && electron-builder --mac --publish=never",
  "build:mac:arm64": "npm run icons && electron-builder --mac --arm64 --publish=never",
  "build:mac:x64": "npm run icons && electron-builder --mac --x64 --publish=never",
  "build:win": "npm run icons && electron-builder --win --publish=never",
  "build:linux": "npm run icons && electron-builder --linux --publish=never"
  },
  "build": {
    "appId": "com.ptitconvert.app",
    "productName": "PtitConvert",
    "asar": true,
    "compression": "maximum",
    "npmRebuild": false,
    "electronLanguages": ["en-US", "fr"],
    "files": [
      "**/*",
      "!**/*.map",
      "!**/*.ts",
      "!**/*.spec.*",
      "!**/__tests__/**",
      "!**/test{,s}/**",
      "!**/screenshots/**",
      "!**/*.md",
      "!**/docs/**"
    ],
    "extraResources": [
      {
        "from": "../bin",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
  "mac": {
      "icon": "assets/icon.icns",
      "target": [
  { "target": "dmg" }
      ],
      "artifactName": "PtitConvert-${version}-mac-${arch}.dmg",
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
  "artifactName": "PtitConvert-${version}-win.exe"
      
    },
    "linux": {
      "icon": "assets",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "artifactName": "PtitConvert-${version}-linux.AppImage",
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
  "electron-builder": "^24.13.3",
  "png2icons": "^2.0.1",
  "sharp": "^0.33.5"
  }
}
